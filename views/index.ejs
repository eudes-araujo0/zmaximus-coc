<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Consulta de Cl√£ - Clash of Clans</title>

  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />

  <style>
    /* Background customizado ‚Äì substitua a URL conforme sua prefer√™ncia */
    body {
      background: url('https://wallpapercave.com/wp/wp2757875.jpg') no-repeat center center fixed;
      background-size: cover;
    }

    /* Tamanho fixo para o "badge" de XP */
    .level-badge {
      position: relative;
      width: 40px;   /* Ajuste conforme necess√°rio */
      height: 40px;  /* Ajuste conforme necess√°rio */
      flex-shrink: 0; /* Impede que o badge seja comprimido em telas menores */
    }
    .level-badge img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .level-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #fff;
      font-weight: bold;
      font-size: 14px;      /* Tamanho fixo para n√£o variar */
      line-height: 14px;    /* Mant√©m altura consistente mesmo com 2 ou 3 d√≠gitos */
      white-space: nowrap;  /* Evita quebra de linha dentro do badge */
      pointer-events: none;
      text-shadow: 0 0 2px rgba(0,0,0,0.8);
    }
  </style>
</head>
<body class="bg-gray-900 bg-opacity-90 text-gray-100">
  <div class="max-w-4xl mx-auto p-4">
    <div class="bg-gray-800 bg-opacity-95 p-4 rounded-lg shadow-lg">
      <!-- Cabe√ßalho -->
      <h1 class="text-4xl font-extrabold text-center mb-8 border-b pb-4">
        Consulta de Cl√£ (BETA) - Clash of Clans
        <h6 class="text-center mb-2">Desenvolvido por: ¬© Eudes J√∫nior</h6>
      </h1>

      <!-- Formul√°rio de Busca pelo Cl√£ -->
      <form action="/" method="post" class="mb-8">
        <label for="clan_tag" class="block mb-2 text-xl font-medium">
          Tag do Cl√£ (ex: PG2V0RGR):
        </label>
        <div class="flex flex-col md:flex-row">
          <input
            type="text"
            id="clan_tag"
            name="clan_tag"
            placeholder="PG2V0RGR"
            required
            class="flex-1 p-4 border border-gray-600 rounded-t-lg md:rounded-l-lg md:rounded-tr-none bg-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-500"
          >
          <button type="submit" class="bg-yellow-600 text-gray-900 px-6 py-4 rounded-b-lg md:rounded-r-lg md:rounded-bl-none hover:bg-yellow-500 transition-colors duration-300">
            Buscar
          </button>
        </div>
      </form>

      <!-- Mensagem de Erro -->
      <% if (error) { %>
        <p class="text-red-500 font-semibold mb-6"><%= error %></p>
      <% } %>

      <!-- Card do Cl√£ -->
      <% if (data) { %>
        <div class="clan-info bg-gray-700 p-6 rounded-lg shadow-md mb-8">
          <div class="flex flex-col md:flex-row items-center">
            <img
              src="<%= data.badgeUrls.large %>"
              alt="Banner do Cl√£"
              class="w-32 h-32 md:w-48 md:h-48 object-contain mx-auto"
            >
            <div class="mt-4 md:mt-0 md:ml-8 text-center md:text-left">
              <h2 class="text-3xl font-bold"><%= data.name %></h2>
              <p class="mt-2 text-gray-300"><%= data.description %></p>
              <p class="mt-2">N√≠vel: <span class="font-semibold"><%= data.clanLevel %></span></p>
            </div>
          </div>
        </div>
      <% } %>

      <div class="text-center mb-8 flex flex-col items-center">
        <h3 class="text-2xl font-bold text-gray-100 uppercase tracking-wide mb-4">‚ö° Contagem para o fim da temporada! ‚ö°</h3>
        <div class="relative inline-block bg-gray-900 p-2 rounded-xl shadow-lg border border-gray-700">
          <!-- Efeito de brilho externo -->
          <div class="absolute inset-0 bg-gradient-to-r from-yellow-400 via-orange-500 to-red-600 blur-lg opacity-50 rounded-xl"></div>
          
          <div class="relative flex items-center justify-center">
            <div class="p-8 rounded-xl bg-gradient-to-r from-orange-500 via-red-500 to-yellow-400 shadow-2xl border-4 border-yellow-300 animate-pulse">
              <p id="countdown" class="text-4xl font-extrabold text-white tracking-wide drop-shadow-lg">
                <!-- O contador ser√° atualizado aqui -->
              </p>
            </div>
          </div>
        </div>
      </div>

      </div>
      
      <!-- Card de Membros e Resumo de Doa√ß√µes -->
      <% if (members && members.length > 0) { 
            // C√°lculos para o resumo de doa√ß√µes
            let maxDonation = 0;
            let minDonation = Infinity;
            let sumDonation = 0;
            let sumDonationSinceReset = 0;
            let biggestDonorName = "";
            members.forEach(member => {
              const donationValue = Number(member.donations) || 0;
              const donationSinceReset = Number(member.donationsSinceLastReset) || 0;
              sumDonation += donationValue;
              sumDonationSinceReset += donationSinceReset;
              if (donationValue > maxDonation) {
                maxDonation = donationValue;
                biggestDonorName = member.name;
              }
              if (donationValue < minDonation) {
                minDonation = donationValue;
              }
            });
            let avgDonation = sumDonation / members.length;
      %>
      <div class="members-info p-4 rounded-b-lg bg-gray-800">
        <!-- Card Resumo de Doa√ß√µes -->
        <div class="summary-card bg-gradient-to-r from-orange-500 via-orange-600 to-orange-700 text-gray-900 p-6 rounded-xl shadow-2xl mb-6 relative overflow-hidden">
          <h3 class="text-3xl font-extrabold mb-6 text-center uppercase text-white drop-shadow-lg">üèÜ Resumo de Doa√ß√µes üèÜ</h3>
          
          <ul class="space-y-3 text-lg text-white">
            <li class="flex justify-between border-b border-orange-300 pb-2">
              <span class="font-bold">üî• Total doado pelo cl√£:</span>
              <span><%= Number(sumDonation).toLocaleString('pt-BR', { maximumFractionDigits: 0 }) %></span>
            </li>
            
            <li class="flex justify-between border-b border-orange-300 pb-2 bg-yellow-500 text-gray-900 font-extrabold p-3 rounded-lg shadow-md animate-pulse">
              <span class="font-bold">üèÜ Top doador:</span>
              <span><%= biggestDonorName %> (<%= Number(maxDonation).toLocaleString('pt-BR', { maximumFractionDigits: 0 }) %>)</span>
            </li>
            
            <li class="flex justify-between border-b border-orange-300 pb-2 text-white font-semibold">
              <span class="font-bold">üìä M√©dia de doa√ß√µes do Cl√£:</span>
              <span><%= Number(avgDonation).toLocaleString('pt-BR', { maximumFractionDigits: 0 }) %></span>
            </li>
            
            <li class="flex justify-between text-gray-300 font-medium">
              <span class="font-bold">‚öîÔ∏è Tropas doadas desde o √∫ltimo reset:</span>
              <span><%= Number(sumDonationSinceReset).toLocaleString('pt-BR', { maximumFractionDigits: 0 }) %></span>
            </li>
          </ul>
        </div>
          <!-- T√≠tulo e Ordena√ß√£o dos Membros -->
          <div class="flex flex-col md:flex-row justify-between items-center mb-4">
            <h2 class="text-2xl font-bold">Membros do Cl√£</h2>
            <div class="flex items-center mt-2 md:mt-0">
              <label for="sortOrder" class="mr-2">Ordenar:</label>
              <select id="sortOrder" class="p-2 border border-gray-600 rounded bg-gray-800">
                <option value="desc">Maior para Menor</option>
                <option value="asc">Menor para Maior</option>
              </select>
            </div>
          </div>

          <!-- Campo de busca para jogadores, centralizado -->
          <div class="text-center mb-4">
            <input
              type="text"
              id="playerSearch"
              placeholder="Buscar jogador pelo nick"
              class="mx-auto p-4 border border-gray-600 rounded transition-all duration-500 bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
          </div>
          <!-- Container para mensagem de "Jogador n√£o encontrado!" -->
          <div id="suggestions" class="text-center text-lg font-medium mb-2"></div>

          <!-- Lista de Membros -->
          <ul id="membersList" class="divide-y divide-gray-600">
            <% members.forEach(member => {
               let isTopDonor = (member.name === biggestDonorName);
            %>
              <li class="py-2 flex justify-between items-center" 
                  data-donation="<%= member.donations %>" 
                  data-name="<%= member.name.toLowerCase() %>">
                <!-- √çcone de n√≠vel antes do nome do jogador -->
                <div class="inline-flex items-center space-x-2 overflow-hidden">
                  <!-- Badge de XP -->
                  <span class="level-badge">
                    <img src="/images/star-badge.png" alt="N√≠vel">
                    <span class="level-text"><%= member.expLevel %></span>
                  </span>

                  <!-- Nome do jogador (com truncamento) -->
                  <span
                    class="font-medium truncate whitespace-nowrap max-w-[220px] sm:max-w-[200px] md:max-w-[250px]"
                    title="<%= member.name %>"
                  >
                    <% if (member.league) { %>
                      <img
                        src="<%= member.league.iconUrls.tiny || member.league.iconUrls.small %>"
                        alt="<%= member.league.name %>"
                        class="inline-block w-8 h-8 mr-1 align-middle "
                      >
                    <% } %>
                    <%= member.name %>
                  </span>

                  <span class="text-yellow-400 font-bold top-doador-tag hidden mt-0 md:mt-0 md:ml-2">
                    <span class="block md:hidden">üèÜ TOP</span>
                    <span class="hidden md:block">üèÜ TOP DOADOR</span>
                  </span>
                </div>
                
                <!-- Valor das doa√ß√µes com display flex e alinhado √† direita (mobile) -->
                <span class="font-semibold flex flex-col md:flex-row items-end md:items-center justify-end whitespace-nowrap text-right">
                  <span>Doa√ß√µes:</span>
                  <span class="md:ml-1">
                    <%= Number(member.donations).toLocaleString('pt-BR', { maximumFractionDigits: 0 }) %>
                  </span>
                </span>
              </li>
            <% }); %>
          </ul>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    // Pegando a vari√°vel de tempo da temporada
    const seasonEnd = <%= seasonEnd %>; // Passando diretamente o valor para o JavaScript

    function updateCountdown() {
      const now = Date.now();
      const remainingTime = seasonEnd - now; // Calculando o tempo restante

      if (remainingTime <= 0) {
        document.getElementById("countdown").textContent = "Temporada finalizada!";
      } else {
        // Calcular dias, horas, minutos e segundos restantes
        const days = Math.floor(remainingTime / (1000 * 60 * 60 * 24));
        const hours = Math.floor((remainingTime % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((remainingTime % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((remainingTime % (1000 * 60)) / 1000);

        // Atualizar o contador na tela
        document.getElementById("countdown").textContent = `${days}d ${hours}h ${minutes}m ${seconds}s`;
      }
    }

    // Atualizar o contador de forma din√¢mica a cada segundo
    setInterval(updateCountdown, 1000);

    // Atualizar a primeira vez quando a p√°gina carregar
    updateCountdown();
  </script>

  

  <!-- Seus scripts personalizados -->
  <script src="/js/main.js"></script>
  <script src="/js/sortOrder.js"></script>
</body>
</html>
