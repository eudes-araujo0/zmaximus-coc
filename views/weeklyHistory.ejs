<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Histórico Semanal</title>
  <!-- Se quiser usar Tailwind ou outro CSS, fique à vontade -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen flex flex-col">
  <div class="max-w-3xl mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Histórico Semanal</h1>

    <% if (weeklyHistory && weeklyHistory.length > 0) { %>
      <ul class="space-y-4">
        <% weeklyHistory.forEach(item => { %>
          <li class="bg-gray-800 p-4 rounded shadow">
            <p class="font-semibold">
              Semana <%= item.weekNumber %>: 
              <span class="text-yellow-400"><%= item.totalDonations %></span> doações
            </p>
            <p class="text-sm text-gray-400 mt-1">
              Data do reset: <%= new Date(item.date).toLocaleString('pt-BR') %>
            </p>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-lg">Nenhum histórico semanal registrado ainda.</p>
    <% } %>
  </div>
</body>
</html>
