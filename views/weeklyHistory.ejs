  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-extrabold mb-8 text-center">Hist√≥rico Semanal</h1>
    <% if (weeklyHistory && weeklyHistory.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% weeklyHistory.forEach(item => { %>
          <div class="bg-gray-800 p-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300">
            <div class="flex justify-between items-center border-b border-gray-700 pb-3 mb-4">
              <div>
                <h2 class="text-2xl font-bold">Semana <%= item.weekNumber %></h2>
                <p class="text-sm text-gray-400"><%= new Date(item.date).toLocaleString() %></p>
              </div>
              <div class="text-right">
                <p class="font-semibold text-lg">Total Semanal: <%= Number(item.totalDonations).toLocaleString('pt-BR', { minimumFractionDigits: 0, maximumFractionDigits: 2 }) %></p>
                <p class="font-semibold text-lg">M√©dia Semanal: <%= item.averageDonation %></p>
              </div>
            </div>
            <div>
              <p class="font-bold mb-2">Top doadores:</p>
              <ol class="list-decimal list-inside">
                <% item.topDonors.forEach(function(donor, index) { 
                     let medal = '';
                     if (index === 0) { medal = 'ü•á'; }
                     else if (index === 1) { medal = 'ü•à'; }
                     else if (index === 2) { medal = 'ü•â'; }
                %>
                  <li class="mb-1">
                    <span class="mr-2 text-xl"><%= medal %></span>
                    <span class="font-medium"><%= donor.name %></span>
                    <span class="text-sm text-gray-300">(<%= Number(donor.donations).toLocaleString('pt-BR', { minimumFractionDigits: 0, maximumFractionDigits: 2 }) %> doa√ß√µes)</span>
                  </li>
                <% }); %>
              </ol>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center text-lg">Nenhum hist√≥rico semanal registrado ainda.</p>
    <% } %>
